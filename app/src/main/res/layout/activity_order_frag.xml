<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.DuAn1_CP16306_Nhom2.Menu.OrderFrag">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        app:title="Sản phẩm trong giỏ hàng"
        app:titleTextColor="@color/white"
        app:titleMarginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"/>

    <Button
        android:id="@+id/btnpaym"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Đến Giỏ hàng"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:background="@drawable/shapebtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />
    <ListView
        android:id="@+id/rcv_pay"
        android:layout_below="@+id/toolbar"
        android:layout_width="404dp"
        android:layout_height="500dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/tv_sumk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcv_pay"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="125dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="Tổng tiền"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="683dp" />

</RelativeLayout>